  <div>
  <%# <% Tie each room number to ID %> 
    <%= f.datetime_select :expected_checkout, vale: @date, id: 'bar', class: "form-control" %>
  </div>
  <div>
    <%= f.text_field :room_id, placeholder: "Room Number", class: "form-control" %>
  </div>
  <div class="btn">
    <%= f.submit "CHECK IN" %>
  </div>     
  <%= hidden_field_tag :room_id, @room %>
<% end %>